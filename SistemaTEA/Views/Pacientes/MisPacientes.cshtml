@{
    ViewData["Title"] = "Mis Pacientes";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mis Pacientes - Sistema TEA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            min-height: 100vh;
            color: #333;
        }

        .header {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

        .header h1 {
            color: white;
            font-size: 1.8rem;
            font-weight: 300;
        }

        .user-info {
            color: white;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-info i {
            font-size: 1.2rem;
        }

        .main-container {
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .breadcrumb {
            background: rgba(255, 255, 255, 0.1);
            padding: 1rem;
            border-radius: 10px;
            margin-bottom: 2rem;
            color: white;
        }

        .breadcrumb a {
            color: white;
            text-decoration: none;
            opacity: 0.8;
        }

        .breadcrumb a:hover {
            opacity: 1;
        }

        .stats-section {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .stats-section h2 {
            color: #4a5568;
            margin-bottom: 1rem;
            font-size: 2rem;
            font-weight: 300;
        }

        .total-pacientes {
            font-size: 3rem;
            font-weight: bold;
            color: #4299e1;
            margin: 1rem 0;
        }

        .patients-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 15px;
            padding: 2rem;
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        }

        .patients-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1rem;
            border-bottom: 2px solid #e2e8f0;
        }

        .patients-header h3 {
            color: #4a5568;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .patients-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
        }

        .patient-card {
            background: #f7fafc;
            border: 1px solid #e2e8f0;
            border-radius: 12px;
            padding: 1.5rem;
            transition: all 0.3s ease;
            border-left: 4px solid #4299e1;
        }

        .patient-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            background: #edf2f7;
        }

        .patient-header {
            display: flex;
            align-items: center;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .patient-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: linear-gradient(135deg, #4299e1, #3182ce);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.3rem;
        }

        .patient-info {
            flex: 1;
        }

        .patient-name {
            font-size: 1.2rem;
            font-weight: 600;
            color: #2d3748;
            margin-bottom: 0.3rem;
        }

        .patient-age {
            color: #718096;
            font-size: 0.9rem;
        }

        .patient-details {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }

        .detail-item i {
            color: #4299e1;
            width: 16px;
        }

        .detail-label {
            font-weight: 500;
            color: #4a5568;
        }

        .detail-value {
            color: #718096;
        }

        .parent-info {
            background: rgba(255, 255, 255, 0.5);
            padding: 1rem;
            border-radius: 8px;
            margin-top: 1rem;
        }

        .parent-info h4 {
            color: #4a5568;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .parent-contact {
            display: flex;
            flex-direction: column;
            gap: 0.3rem;
        }

        .parent-contact span {
            font-size: 0.85rem;
            color: #718096;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .observations {
            margin-top: 1rem;
            padding: 1rem;
            background: rgba(255, 255, 255, 0.7);
            border-radius: 8px;
            border-left: 3px solid #ed8936;
        }

        .observations h4 {
            color: #4a5568;
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .observations p {
            color: #718096;
            font-size: 0.85rem;
            line-height: 1.4;
        }

        .no-patients {
            text-align: center;
            padding: 3rem;
            color: #718096;
        }

        .no-patients i {
            font-size: 4rem;
            margin-bottom: 1rem;
            color: #cbd5e0;
        }

        .back-button {
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.8rem 1.5rem;
            background: linear-gradient(135deg, #4299e1 0%, #3182ce 100%);
            color: white;
            text-decoration: none;
            border-radius: 25px;
            transition: all 0.3s ease;
            font-weight: 500;
        }

        .back-button:hover {
            background: linear-gradient(135deg, #3182ce 0%, #2c5282 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .gender-badge {
            padding: 0.2rem 0.8rem;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
        }

        .gender-m {
            background: #bee3f8;
            color: #2b6cb0;
        }

        .gender-f {
            background: #fbb6ce;
            color: #b83280;
        }

        @media (max-width: 768px) {
            .main-container {
                padding: 1rem;
            }

            .patients-grid {
                grid-template-columns: 1fr;
            }

            .patient-details {
                grid-template-columns: 1fr;
            }

            .patients-header {
                flex-direction: column;
                gap: 1rem;
                align-items: flex-start;
            }

            .header h1 {
                font-size: 1.5rem;
            }

            .total-pacientes {
                font-size: 2rem;
            }
        }
    </style>
</head>
<body>
    <div class="header">
        <h1><i class="fas fa-user-md"></i> Mis Pacientes Asignados</h1>
        <div class="user-info">
            <i class="fas fa-stethoscope"></i>
            <span>@ViewBag.NombrePsicologo</span>
        </div>
    </div>

    <div class="main-container">
        <div class="breadcrumb">
            <i class="fas fa-home"></i>
            <a href="@Url.Action("Index", "Home")">Inicio</a> /
            <span>Mis Pacientes</span>
        </div>

        <div class="stats-section">
            <h2>Total de Pacientes Asignados</h2>
            <div class="total-pacientes">@ViewBag.TotalPacientes</div>
            <p>Pacientes bajo su supervisión profesional</p>
        </div>

        <div class="patients-container">
            <div class="patients-header">
                <h3><i class="fas fa-users"></i> Lista de Pacientes</h3>
                <a href="@Url.Action("Index", "Home")" class="back-button">
                    <i class="fas fa-arrow-left"></i> Volver al Panel
                </a>
            </div>

            @if (Model.Any())
            {
                <div class="patients-grid">
                    @foreach (var paciente in Model)
                    {
                        <div class="patient-card">
                            <div class="patient-header">
                                <div class="patient-avatar">
                                    @paciente.Nombre.Substring(0, 1)@paciente.Apellido.Substring(0, 1)
                                </div>
                                <div class="patient-info">
                                    <div class="patient-name">@paciente.Nombre @paciente.Apellido</div>
                                    <div class="patient-age">@paciente.Edad años</div>
                                </div>
                                <span class="gender-badge @(paciente.Genero == "Masculino" ? "gender-m" : "gender-f")">
                                    @paciente.Genero
                                </span>
                            </div>

                            <div class="patient-details">
                                <div class="detail-item">
                                    <i class="fas fa-birthday-cake"></i>
                                    <span class="detail-label">Nacimiento:</span>
                                </div>
                                <div class="detail-value">@paciente.FechaNacimiento.ToString("dd/MM/yyyy")</div>

                                <div class="detail-item">
                                    <i class="fas fa-calendar-plus"></i>
                                    <span class="detail-label">Registrado:</span>
                                </div>
                                <div class="detail-value">@paciente.FechaRegistro.ToString("dd/MM/yyyy")</div>
                            </div>

                            <div class="parent-info">
                                <h4><i class="fas fa-user-friends"></i> Información del Padre/Madre</h4>
                                <div class="parent-contact">
                                    <span><i class="fas fa-user"></i> @paciente.NombrePadre</span>
                                    <span><i class="fas fa-envelope"></i> @paciente.EmailPadre</span>
                                    @if (!string.IsNullOrEmpty(paciente.TelefonoPadre))
                                    {
                                        <span><i class="fas fa-phone"></i> @paciente.TelefonoPadre</span>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(paciente.Observaciones))
                            {
                                <div class="observations">
                                    <h4><i class="fas fa-sticky-note"></i> Observaciones</h4>
                                    <p>@paciente.Observaciones</p>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="no-patients">
                    <i class="fas fa-user-slash"></i>
                    <h3>No tiene pacientes asignados</h3>
                    <p>Actualmente no tiene ningún paciente bajo su supervisión.</p>
                </div>
            }
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Animación de entrada para las tarjetas
            const patientCards = document.querySelectorAll('.patient-card');
            patientCards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.6s ease';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 100);
            });

            // Animación del contador
            const totalElement = document.querySelector('.total-pacientes');
            if (totalElement) {
                const target = parseInt(totalElement.textContent);
                let current = 0;
                const increment = Math.ceil(target / 20);

                const timer = setInterval(() => {
                    current += increment;
                    if (current >= target) {
                        current = target;
                        clearInterval(timer);
                    }
                    totalElement.textContent = current;
                }, 50);
            }
        });
    </script>
</body>
</html>