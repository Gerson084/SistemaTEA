@{
    ViewData["Title"] = "Registro";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sistema TEA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

        :root {
            --primary-dark: #0a0a0a;
            --secondary-dark: #1a1a1a;
            --accent-dark: #2a2a2a;
            --neon-purple: #8b5cf6;
            --neon-violet: #a855f7;
            --neon-pink: #d946ef;
            --deep-purple: #6b46c1;
            --light-purple: #c084fc;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --glass-border: rgba(255, 255, 255, 0.1);
            --shadow-neon: 0 0 20px rgba(139, 92, 246, 0.3);
            --shadow-heavy: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(45deg, var(--primary-dark) 0%, var(--secondary-dark) 50%, var(--accent-dark) 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            position: relative;
            overflow-x: hidden;
            padding: 20px 0;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: radial-gradient(circle at 25% 25%, var(--neon-purple) 0%, transparent 50%), radial-gradient(circle at 75% 75%, var(--neon-pink) 0%, transparent 50%);
                opacity: 0.1;
                z-index: 1;
            }

        .register-container {
            background: rgba(26, 26, 26, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 0;
            width: 90%;
            max-width: 1000px;
            display: flex;
            position: relative;
            z-index: 10;
            box-shadow: var(--shadow-heavy);
            overflow: hidden;
            margin: 20px auto;
            max-height: calc(100vh - 40px);
        }

        .left-side {
            flex: 0 0 35%;
            background: linear-gradient(135deg, var(--deep-purple) 0%, var(--neon-purple) 50%, var(--neon-pink) 100%);
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 2rem 1.5rem;
            min-height: 100%;
        }

            .left-side::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%), repeating-linear-gradient(90deg, transparent, transparent 2px, rgba(255, 255, 255, 0.05) 2px, rgba(255, 255, 255, 0.05) 4px);
                animation: slide-pattern 8s linear infinite;
            }

        @@keyframes slide-pattern {
            0%

        {
            transform: translateX(-100px);
        }

        100% {
            transform: translateX(100px);
        }

        }

        .brand-logo {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 16px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 1.5rem;
            font-size: 2rem;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            animation: glow-pulse 2s ease-in-out infinite alternate;
        }

        @@keyframes glow-pulse {
            from

        {
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
        }

        to {
            box-shadow: 0 0 40px rgba(255, 255, 255, 0.6);
        }

        }

        .brand-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: white;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            letter-spacing: -1px;
        }

        .brand-subtitle {
            font-size: 1rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 300;
            line-height: 1.6;
            max-width: 280px;
        }

        .right-side {
            flex: 1;
            padding: 1.5rem 2rem;
            display: flex;
            flex-direction: column;
            background: var(--secondary-dark);
            position: relative;
            overflow-y: auto;
            max-height: calc(100vh - 40px);
        }

        .form-header {
            margin-bottom: 1.5rem;
            padding-top: 1rem;
        }

        .form-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-subtitle {
            color: var(--text-muted);
            font-size: 0.9rem;
            font-weight: 400;
        }

        .form-field {
            margin-bottom: 1rem;
            position: relative;
            transition: all 0.3s ease;
        }

            .form-field.hidden {
                opacity: 0;
                max-height: 0;
                margin-bottom: 0;
                overflow: hidden;
            }

        .field-label {
            display: block;
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 0.5rem;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .field-wrapper {
            position: relative;
        }

        .field-input, .field-select {
            width: 100%;
            padding: 0.8rem 0.8rem 0.8rem 3rem;
            background: var(--accent-dark);
            border: 2px solid transparent;
            border-radius: 10px;
            color: var(--text-light);
            font-size: 0.9rem;
            font-weight: 400;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            outline: none;
        }

            .field-input::placeholder {
                color: var(--text-muted);
                font-weight: 300;
            }

            .field-input:focus, .field-select:focus {
                border-color: var(--neon-purple);
                background: rgba(42, 42, 42, 0.8);
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
                transform: translateY(-1px);
            }

        .field-select {
            cursor: pointer;
        }

            .field-select option {
                background: var(--accent-dark);
                color: var(--text-light);
            }

        .field-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1rem;
            transition: color 0.3s ease;
        }

        .field-wrapper:focus-within .field-icon {
            color: var(--neon-purple);
        }

        /* Checkbox Styles */
        .checkbox-field {
            display: flex;
            align-items: flex-start;
            margin-bottom: 1rem;
            position: relative;
        }

        .checkbox-wrapper {
            position: relative;
            margin-right: 0.8rem;
            margin-top: 0.2rem;
        }

        .checkbox-input {
            opacity: 0;
            position: absolute;
            cursor: pointer;
        }

        .checkbox-custom {
            width: 18px;
            height: 18px;
            background: var(--accent-dark);
            border: 2px solid var(--text-muted);
            border-radius: 5px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .checkbox-input:checked + .checkbox-custom {
            background: var(--neon-purple);
            border-color: var(--neon-purple);
            box-shadow: 0 0 8px rgba(139, 92, 246, 0.4);
        }

        .checkbox-custom::after {
            content: '';
            width: 5px;
            height: 8px;
            border: solid white;
            border-width: 0 2px 2px 0;
            transform: rotate(45deg);
            opacity: 0;
            transition: opacity 0.2s ease;
        }

        .checkbox-input:checked + .checkbox-custom::after {
            opacity: 1;
        }

        .checkbox-label {
            color: var(--text-light);
            font-size: 0.9rem;
            font-weight: 500;
            cursor: pointer;
            user-select: none;
            margin-bottom: 0.3rem;
        }

        .checkbox-description {
            color: var(--text-muted);
            font-size: 0.8rem;
            line-height: 1.4;
        }

        .neon-button {
            width: 100%;
            padding: 1rem;
            background: transparent;
            border: 2px solid var(--neon-purple);
            border-radius: 10px;
            color: var(--neon-purple);
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 1rem;
            margin-bottom: 1rem;
        }

            .neon-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
                transition: left 0.3s ease;
                z-index: -1;
            }

            .neon-button:hover {
                color: white;
                box-shadow: 0 0 20px rgba(139, 92, 246, 0.5), inset 0 0 20px rgba(139, 92, 246, 0.1);
                transform: translateY(-1px);
            }

                .neon-button:hover::before {
                    left: 0;
                }

            .neon-button:active {
                transform: translateY(0);
            }

        .login-section {
            text-align: center;
            margin-top: 1rem;
            padding: 1rem 0;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .login-text {
            color: var(--text-muted);
            font-size: 0.85rem;
            margin-bottom: 0.5rem;
        }

        .login-link {
            color: var(--neon-violet);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            font-size: 0.9rem;
        }

            .login-link::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--neon-violet);
                transition: width 0.3s ease;
            }

            .login-link:hover {
                color: var(--neon-pink);
                text-shadow: 0 0 10px rgba(217, 70, 239, 0.5);
            }

                .login-link:hover::after {
                    width: 100%;
                    background: var(--neon-pink);
                }

        .alert {
            position: fixed;
            top: 2rem;
            right: 2rem;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            z-index: 1000;
            backdrop-filter: blur(20px);
            animation: cyber-slide 0.5s ease-out;
            box-shadow: var(--shadow-heavy);
            max-width: 400px;
            border-left: 4px solid;
        }

        @@keyframes cyber-slide {
            from

        {
            opacity: 0;
            transform: translateX(100px) rotateY(90deg);
        }

        to {
            opacity: 1;
            transform: translateX(0) rotateY(0deg);
        }

        }

        .alert-danger {
            background: rgba(217, 70, 239, 0.1);
            color: var(--neon-pink);
            border-color: var(--neon-pink);
            border-left-color: var(--neon-pink);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            body

        {
            padding: 10px;
        }

        .register-container {
            flex-direction: column;
            width: 95%;
            max-width: 450px;
            max-height: calc(100vh - 20px);
        }

        .left-side {
            flex: 0 0 auto;
            padding: 1.5rem 1rem;
            min-height: 180px;
        }

        .brand-title {
            font-size: 2rem;
        }

        .right-side {
            padding: 1rem 1.5rem;
            max-height: calc(100vh - 220px);
        }

        }
    </style>
</head>
<body>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
        </div>
    }

    <div class="register-container">
        <div class="left-side">
            <div class="brand-logo">
                <i class="fas fa-brain"></i>
            </div>
            <h1 class="brand-title">TEA</h1>
            <p class="brand-subtitle">
                Sistema de Diagnóstico TEA. Únete a nuestra plataforma y comienza tu experiencia.
            </p>
        </div>

        <div class="right-side">
            <div class="form-header">
                <h2 class="form-title">Registro</h2>
                <p class="form-subtitle">Crea tu cuenta en el sistema</p>
            </div>

            <form asp-action="Registro" method="post" id="registerForm">
                <div class="form-field">
                    <label for="nombre" class="field-label">Nombre</label>
                    <div class="field-wrapper">
                        <i class="fas fa-user field-icon"></i>
                        <input id="nombre" name="nombre" type="text" class="field-input" placeholder="Tu nombre" required />
                    </div>
                </div>

                <div class="form-field">
                    <label for="apellido" class="field-label">Apellido</label>
                    <div class="field-wrapper">
                        <i class="fas fa-user field-icon"></i>
                        <input id="apellido" name="apellido" type="text" class="field-input" placeholder="Tu apellido" required />
                    </div>
                </div>

                <div class="form-field">
                    <label for="email" class="field-label">Email</label>
                    <div class="field-wrapper">
                        <i class="fas fa-at field-icon"></i>
                        <input id="email" name="email" type="email" class="field-input" placeholder="usuario@sistema.com" required />
                    </div>
                </div>

                <div class="form-field">
                    <label for="telefono" class="field-label">Teléfono</label>
                    <div class="field-wrapper">
                        <i class="fas fa-phone field-icon"></i>
                        <input id="telefono" name="telefono" type="tel" class="field-input" placeholder="1234-5678" />
                    </div>
                </div>

                <div class="checkbox-field">
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="esPadre" name="esPadre" class="checkbox-input" value="true" />
                        <label for="esPadre" class="checkbox-custom"></label>
                    </div>
                    <div>
                        <label for="esPadre" class="checkbox-label">Soy padre/madre de familia</label>
                        <div class="checkbox-description">
                            Selecciona si eres padre/madre registrando a tu hijo/a. Si NO marcas esto, te registrarás como paciente directo.
                        </div>
                    </div>
                </div>
                <input type="hidden" name="esPadre" value="false" />

                <!-- Campos solo para pacientes (se ocultan si es padre) -->
                <div class="form-field" id="fechaNacimientoField">
                    <label for="fechaNacimiento" class="field-label">Fecha de Nacimiento</label>
                    <div class="field-wrapper">
                        <i class="fas fa-calendar field-icon"></i>
                        <input id="fechaNacimiento" name="fechaNacimiento" type="date" class="field-input" />
                    </div>
                </div>

                <div class="form-field" id="generoField">
                    <label for="genero" class="field-label">Género</label>
                    <div class="field-wrapper">
                        <i class="fas fa-venus-mars field-icon"></i>
                        <select id="genero" name="genero" class="field-select">
                            <option value="">Selecciona tu género</option>
                            <option value="M">Masculino</option>
                            <option value="F">Femenino</option>
                        </select>
                    </div>
                </div>

                <div class="form-field">
                    <label for="contraseña" class="field-label">Contraseña</label>
                    <div class="field-wrapper">
                        <i class="fas fa-key field-icon"></i>
                        <input id="contraseña" name="contraseña" type="password" class="field-input" placeholder="••••••••••" required />
                    </div>
                </div>

                <div class="form-field">
                    <label for="confirmarContrasena" class="field-label">Confirmar Contraseña</label>
                    <div class="field-wrapper">
                        <i class="fas fa-key field-icon"></i>
                        <input id="confirmarContrasena" name="confirmarContrasena" type="password" class="field-input" placeholder="••••••••••" required />
                    </div>
                </div>

                <button type="submit" class="neon-button" id="registerBtn">
                    <i class="fas fa-user-plus"></i> Crear Cuenta
                </button>

                <div class="login-section">
                    <p class="login-text">¿Ya tienes cuenta?</p>
                    <a asp-action="Login" class="login-link">Iniciar sesión</a>
                </div>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const registerForm = document.getElementById('registerForm');
            const registerBtn = document.getElementById('registerBtn');
            const esPadreCheckbox = document.getElementById('esPadre');
            const fechaNacimientoField = document.getElementById('fechaNacimientoField');
            const generoField = document.getElementById('generoField');
            const fechaNacimientoInput = document.getElementById('fechaNacimiento');
            const generoInput = document.getElementById('genero');

            // Función para mostrar/ocultar campos según si es padre
            function togglePatientFields() {
                const isPadre = esPadreCheckbox.checked;

                if (isPadre) {
                    // Si es padre, ocultar campos de paciente
                    fechaNacimientoField.classList.add('hidden');
                    generoField.classList.add('hidden');
                    fechaNacimientoInput.removeAttribute('required');
                    generoInput.removeAttribute('required');
                } else {
                    // Si NO es padre (es paciente), mostrar campos
                    fechaNacimientoField.classList.remove('hidden');
                    generoField.classList.remove('hidden');
                    fechaNacimientoInput.setAttribute('required', 'required');
                    generoInput.setAttribute('required', 'required');
                }
            }

            // Inicializar estado de campos al cargar
            togglePatientFields();

            // Escuchar cambios en el checkbox
            esPadreCheckbox.addEventListener('change', togglePatientFields);

            // Animation for form fields
            const formFields = document.querySelectorAll('.form-field, .checkbox-field');
            formFields.forEach((field, index) => {
                field.style.opacity = '0';
                field.style.transform = 'translateX(30px)';

                setTimeout(() => {
                    field.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                    field.style.opacity = '1';
                    field.style.transform = 'translateX(0)';
                }, 200 + (index * 100));
            });

            // Form validation
            const inputs = document.querySelectorAll('.field-input, .field-select');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'scale(1.02)';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'scale(1)';
                });
            });

            // Password confirmation validation
            const password = document.getElementById('contraseña');
            const confirmPassword = document.getElementById('confirmarContrasena');

            function validatePasswords() {
                if (password.value !== confirmPassword.value) {
                    confirmPassword.setCustomValidity("Las contraseñas no coinciden");
                } else {
                    confirmPassword.setCustomValidity("");
                }
            }

            password.addEventListener('change', validatePasswords);
            confirmPassword.addEventListener('keyup', validatePasswords);

            // Submit form handling
            registerForm.addEventListener('submit', function(e) {
                registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creando cuenta...';
                registerBtn.disabled = true;
            });

            // Auto dismiss alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.animation = 'cyber-slide 0.5s ease-out reverse';
                    setTimeout(() => alert.remove(), 500);
                }, 5000);
            });
        });
    </script>
</body>
</html>