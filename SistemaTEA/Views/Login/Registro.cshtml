@model SistemaTEA.Models.Usuario
@{
    ViewData["Title"] = "Registro";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sistema TEA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

        :root {
            --primary-dark: #0a0a0a;
            --secondary-dark: #1a1a1a;
            --accent-dark: #2a2a2a;
            --neon-purple: #8b5cf6;
            --neon-violet: #a855f7;
            --neon-pink: #d946ef;
            --deep-purple: #6b46c1;
            --light-purple: #c084fc;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --glass-border: rgba(255, 255, 255, 0.1);
            --shadow-neon: 0 0 20px rgba(139, 92, 246, 0.3);
            --shadow-heavy: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(45deg, var(--primary-dark) 0%, var(--secondary-dark) 50%, var(--accent-dark) 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
            padding: 20px 0;
        }

            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: radial-gradient(circle at 25% 25%, var(--neon-purple) 0%, transparent 50%), radial-gradient(circle at 75% 75%, var(--neon-pink) 0%, transparent 50%);
                opacity: 0.1;
                z-index: 1;
            }

        .register-container {
            background: rgba(26, 26, 26, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 0;
            width: 90%;
            max-width: 1100px;
            min-height: 700px;
            display: flex;
            position: relative;
            z-index: 10;
            box-shadow: var(--shadow-heavy);
            overflow: hidden;
        }

        /* Left Side - Branding */
        .left-side {
            flex: 1;
            background: linear-gradient(135deg, var(--deep-purple) 0%, var(--neon-purple) 50%, var(--neon-pink) 100%);
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 3rem 2rem;
        }

            .left-side::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient( 45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70% ), repeating-linear-gradient( 90deg, transparent, transparent 2px, rgba(255, 255, 255, 0.05) 2px, rgba(255, 255, 255, 0.05) 4px );
                animation: slide-pattern 8s linear infinite;
            }

        @@keyframes slide-pattern {
            0%

        {
            transform: translateX(-100px);
        }

        100% {
            transform: translateX(100px);
        }

        }

        .brand-logo {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            font-size: 2.5rem;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            animation: glow-pulse 2s ease-in-out infinite alternate;
        }

        @@keyframes glow-pulse {
            from

        {
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
        }

        to {
            box-shadow: 0 0 40px rgba(255, 255, 255, 0.6);
        }

        }

        .brand-title {
            font-size: 3rem;
            font-weight: 800;
            color: white;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            letter-spacing: -1px;
        }

        .brand-subtitle {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 300;
            line-height: 1.6;
            max-width: 300px;
        }

        /* Right Side - Form */
        .right-side {
            flex: 1.2;
            padding: 3rem 2.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: var(--secondary-dark);
            position: relative;
            max-height: 700px;
            overflow-y: auto;
        }

        .form-header {
            margin-bottom: 2rem;
        }

        .form-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-subtitle {
            color: var(--text-muted);
            font-size: 1rem;
            font-weight: 400;
        }

        /* Form Fields */
        .form-row {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .form-field {
            margin-bottom: 1.5rem;
            position: relative;
            flex: 1;
        }

        .field-label {
            display: block;
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 0.6rem;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .field-wrapper {
            position: relative;
        }

        .field-input {
            width: 100%;
            padding: 1rem 1rem 1rem 3rem;
            background: var(--accent-dark);
            border: 2px solid transparent;
            border-radius: 12px;
            color: var(--text-light);
            font-size: 0.95rem;
            font-weight: 400;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            outline: none;
        }

            .field-input::placeholder {
                color: var(--text-muted);
                font-weight: 300;
            }

            .field-input:focus {
                border-color: var(--neon-purple);
                background: rgba(42, 42, 42, 0.8);
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
                transform: translateY(-2px);
            }

            .field-input.error {
                border-color: rgba(217, 70, 239, 0.8);
                background: rgba(217, 70, 239, 0.1);
            }

            .field-input.success {
                border-color: var(--neon-purple);
                background: rgba(139, 92, 246, 0.1);
            }

        .field-icon {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1rem;
            transition: color 0.3s ease;
        }

        .field-wrapper:focus-within .field-icon {
            color: var(--neon-purple);
        }

        .text-danger {
            color: var(--neon-pink);
            font-size: 0.8rem;
            margin-top: 0.5rem;
            display: block;
            animation: shake 0.5s ease-in-out;
        }

        @@keyframes shake {
            0%, 100%

        {
            transform: translateX(0);
        }

        25% {
            transform: translateX(-5px);
        }

        75% {
            transform: translateX(5px);
        }

        }

        /* Password Strength */
        .password-strength {
            margin-top: 0.5rem;
            height: 4px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 2px;
            overflow: hidden;
        }

        .password-strength-bar {
            height: 100%;
            width: 0%;
            transition: all 0.3s ease;
            border-radius: 2px;
        }

        .strength-weak {
            background: var(--neon-pink);
            width: 33%;
        }

        .strength-medium {
            background: #ffd93d;
            width: 66%;
        }

        .strength-strong {
            background: var(--neon-purple);
            width: 100%;
        }

        .password-match {
            font-size: 0.8rem;
            margin-top: 0.5rem;
            transition: all 0.3s ease;
        }

            .password-match.success {
                color: var(--neon-purple);
            }

            .password-match.error {
                color: var(--neon-pink);
            }

        /* Button */
        .neon-button {
            width: 100%;
            padding: 1.2rem;
            background: transparent;
            border: 2px solid var(--neon-purple);
            border-radius: 12px;
            color: var(--neon-purple);
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 1rem;
        }

            .neon-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
                transition: left 0.3s ease;
                z-index: -1;
            }

            .neon-button:hover {
                color: white;
                box-shadow: 0 0 20px rgba(139, 92, 246, 0.5), inset 0 0 20px rgba(139, 92, 246, 0.1);
                transform: translateY(-2px);
            }

                .neon-button:hover::before {
                    left: 0;
                }

            .neon-button:active {
                transform: translateY(0);
            }

            .neon-button.loading {
                pointer-events: none;
                animation: cyber-loading 1.5s ease-in-out infinite;
            }

                .neon-button.loading::after {
                    content: '';
                    position: absolute;
                    top: 50%;
                    right: 1rem;
                    width: 20px;
                    height: 20px;
                    border: 2px solid transparent;
                    border-top: 2px solid currentColor;
                    border-radius: 50%;
                    transform: translateY(-50%);
                    animation: spin 1s linear infinite;
                }

        @@keyframes cyber-loading {
            0%, 100%

        {
            border-color: var(--neon-purple);
        }

        50% {
            border-color: var(--neon-pink);
        }

        }

        @@keyframes spin {
            from

        {
            transform: translateY(-50%) rotate(0deg);
        }

        to {
            transform: translateY(-50%) rotate(360deg);
        }

        }

        /* Login Link */
        .login-section {
            text-align: center;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .login-text {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .login-link {
            color: var(--neon-violet);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
        }

            .login-link::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--neon-violet);
                transition: width 0.3s ease;
            }

            .login-link:hover {
                color: var(--neon-pink);
                text-shadow: 0 0 10px rgba(217, 70, 239, 0.5);
            }

                .login-link:hover::after {
                    width: 100%;
                    background: var(--neon-pink);
                }

        /* Alerts */
        .alert {
            position: fixed;
            top: 2rem;
            right: 2rem;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            z-index: 1000;
            backdrop-filter: blur(20px);
            animation: cyber-slide 0.5s ease-out;
            box-shadow: var(--shadow-heavy);
            max-width: 400px;
            border-left: 4px solid;
        }

        @@keyframes cyber-slide {
            from

        {
            opacity: 0;
            transform: translateX(100px) rotateY(90deg);
        }

        to {
            opacity: 1;
            transform: translateX(0) rotateY(0deg);
        }

        }

        .alert-success {
            background: rgba(139, 92, 246, 0.1);
            color: var(--neon-purple);
            border-color: var(--neon-purple);
            border-left-color: var(--neon-purple);
        }

        .alert-danger {
            background: rgba(217, 70, 239, 0.1);
            color: var(--neon-pink);
            border-color: var(--neon-pink);
            border-left-color: var(--neon-pink);
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .register-container

        {
            flex-direction: column;
            height: auto;
            max-width: 400px;
            min-height: auto;
        }

        .left-side {
            padding: 2rem 1.5rem 1rem;
            min-height: 200px;
        }

        .brand-title {
            font-size: 2rem;
        }

        .brand-logo {
            width: 70px;
            height: 70px;
            font-size: 2rem;
        }

        .right-side {
            padding: 2rem 1.5rem;
            max-height: none;
        }

        .form-title {
            font-size: 1.8rem;
        }

        .form-row {
            flex-direction: column;
            gap: 0;
        }

        .alert {
            top: 1rem;
            right: 1rem;
            left: 1rem;
        }

        }

        @@media (max-width: 480px) {
            .register-container

        {
            width: 95%;
            margin: 1rem;
        }

        .left-side,
        .right-side {
            padding: 1.5rem 1rem;
        }

        }

        /* Custom scrollbar */
        .right-side::-webkit-scrollbar {
            width: 6px;
        }

        .right-side::-webkit-scrollbar-track {
            background: var(--accent-dark);
        }

        .right-side::-webkit-scrollbar-thumb {
            background: var(--neon-purple);
            border-radius: 3px;
        }

            .right-side::-webkit-scrollbar-thumb:hover {
                background: var(--neon-pink);
            }
    </style>
</head>
<body>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
        </div>
    }

    <div class="register-container">
        <!-- Left Side - Branding -->
        <div class="left-side">
            <div class="brand-logo">
                <img src="/img/psicologo.png" alt="Logo" style="width: 60px; height: 60px; object-fit: contain;" />
            </div>
            <h1 class="brand-title">TEA</h1>
            <p class="brand-subtitle">
                Sistema de Diagnóstico TEA. Únete a nuestra plataforma y comienza tu experiencia.
            </p>
        </div>

        <!-- Right Side - Form -->
        <div class="right-side">
            <div class="form-header">
                <h2 class="form-title">Crear Cuenta</h2>
                <p class="form-subtitle">Completa el formulario para registrarte</p>
            </div>

            <form asp-action="Registro" method="post" id="registerForm">
                <div class="form-row">
                    <div class="form-field">
                        <label for="Nombre" class="field-label">Nombre</label>
                        <div class="field-wrapper">
                            <i class="fas fa-user field-icon"></i>
                            <input asp-for="Nombre"
                                   class="field-input"
                                   placeholder="Tu nombre"
                                   required
                                   autocomplete="given-name" />
                        </div>
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-field">
                        <label for="Apellido" class="field-label">Apellido</label>
                        <div class="field-wrapper">
                            <i class="fas fa-user field-icon"></i>
                            <input asp-for="Apellido"
                                   class="field-input"
                                   placeholder="Tu apellido"
                                   required
                                   autocomplete="family-name" />
                        </div>
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-field">
                    <label for="Email" class="field-label">Email</label>
                    <div class="field-wrapper">
                        <i class="fas fa-envelope field-icon"></i>
                        <input asp-for="Email"
                               type="email"
                               class="field-input"
                               placeholder="usuario@sistema.com"
                               required
                               autocomplete="email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label for="Telefono" class="field-label">Teléfono</label>
                    <div class="field-wrapper">
                        <i class="fas fa-phone field-icon"></i>
                        <input asp-for="Telefono"
                               type="tel"
                               class="field-input"
                               placeholder="1234-5678"
                               required
                               autocomplete="tel" />
                    </div>
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label for="Contraseña" class="field-label">Contraseña</label>
                    <div class="field-wrapper">
                        <i class="fas fa-lock field-icon"></i>
                        <input asp-for="Contraseña"
                               type="password"
                               class="field-input"
                               placeholder="••••••••••"
                               required
                               autocomplete="new-password"
                               id="password" />
                    </div>
                    <div class="password-strength">
                        <div class="password-strength-bar" id="strengthBar"></div>
                    </div>
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>

                <div class="form-field">
                    <label for="confirmarContrasena" class="field-label">Confirmar Contraseña</label>
                    <div class="field-wrapper">
                        <i class="fas fa-key field-icon"></i>
                        <input name="confirmarContrasena"
                               type="password"
                               class="field-input"
                               placeholder="••••••••••"
                               required
                               autocomplete="new-password"
                               id="confirmPassword" />
                    </div>
                    <div class="password-match" id="passwordMatch"></div>
                </div>

                <button type="submit" class="neon-button" id="registerBtn">
                    <i class="fas fa-user-plus"></i> Crear Cuenta
                </button>

                <div class="login-section">
                    <p class="login-text">¿Ya tienes cuenta?</p>
                    <a asp-action="Login" class="login-link">
                        Iniciar sesión
                    </a>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @if (TempData["Error_Contrasena"] != null)
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    icon: 'error',
                    title: '¡Contraseña invalida!',
                        text: '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(TempData["Error_Contrasena"]?.ToString())',
                        background: '#1a1a1a',
                        color: '#ffffff',
                        confirmButtonColor: '#8b5cf6',
                        iconColor: '#8b5cf6',
                        showClass: {
                            popup: 'animate__animated animate__zoomIn'
                        }
                });
            });
        </script>
    }
    <script>
       

        document.addEventListener("DOMContentLoaded", function () {
            const registerForm = document.getElementById('registerForm');
            const registerBtn = document.getElementById('registerBtn');
            const passwordInput = document.getElementById('password');
            const confirmPasswordInput = document.getElementById('confirmPassword');
            const strengthBar = document.getElementById('strengthBar');
            const passwordMatch = document.getElementById('passwordMatch');

            // Validación de fuerza de contraseña
            passwordInput.addEventListener('input', function() {
                const password = this.value;
                const strength = calculatePasswordStrength(password);

                strengthBar.className = 'password-strength-bar';
                if (strength >= 3) {
                    strengthBar.classList.add('strength-strong');
                } else if (strength >= 2) {
                    strengthBar.classList.add('strength-medium');
                } else if (strength >= 1) {
                    strengthBar.classList.add('strength-weak');
                }

                checkPasswordMatch();
            });

            // Validación de coincidencia de contraseñas
            confirmPasswordInput.addEventListener('input', checkPasswordMatch);

            function calculatePasswordStrength(password) {
                let strength = 0;
                if (password.length >= 8) strength++;
                if (/[A-Z]/.test(password)) strength++;
                if (/[0-9]/.test(password)) strength++;
                if (/[^A-Za-z0-9]/.test(password)) strength++;
                return strength;
            }

            function checkPasswordMatch() {
                const password = passwordInput.value;
                const confirmPassword = confirmPasswordInput.value;

                if (confirmPassword.length > 0) {
                    if (password === confirmPassword) {
                        passwordMatch.textContent = '✓ Las contraseñas coinciden';
                        passwordMatch.className = 'password-match success';
                        confirmPasswordInput.classList.remove('error');
                        confirmPasswordInput.classList.add('success');
                    } else {
                        passwordMatch.textContent = '✗ Las contraseñas no coinciden';
                        passwordMatch.className = 'password-match error';
                        confirmPasswordInput.classList.remove('success');
                        confirmPasswordInput.classList.add('error');
                    }
                } else {
                    passwordMatch.textContent = '';
                    confirmPasswordInput.classList.remove('success', 'error');
                }
            }


            registerForm.addEventListener('submit', function(e) {
                const password = passwordInput.value;
                const confirmPassword = confirmPasswordInput.value;

                if (password !== confirmPassword) {
                    e.preventDefault();
                    Swal.fire({
                        icon: 'error',
                        title: 'Error de Validación',
                        text: 'Las contraseñas no coinciden',
                        background: '#1a1a1a',
                        color: '#ffffff',
                        confirmButtonColor: '#d946ef',
                        iconColor: '#d946ef',
                        showClass: {
                            popup: 'animate__animated animate__zoomIn'
                        }
                    });
                    return;
                }

                registerBtn.classList.add('loading');
                registerBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Creando cuenta...';
            });

   
            const inputs = document.querySelectorAll('.field-input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'scale(1.02)';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'scale(1)';

                    if (this.type === 'email' && this.value && !this.checkValidity()) {
                        this.classList.add('error');
                        this.classList.remove('success');
                    } else if (this.value && this.checkValidity()) {
                        this.classList.remove('error');
                        this.classList.add('success');
                    }
                });

                input.addEventListener('input', function() {
                    if (this.value === '') {
                        this.classList.remove('error', 'success');
                    }
                });
            });

            // Animación de entrada para los campos
            const formFields = document.querySelectorAll('.form-field');
            formFields.forEach((field, index) => {
                field.style.opacity = '0';
                field.style.transform = 'translateX(30px)';

                setTimeout(() => {
                    field.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                    field.style.opacity = '1';
                    field.style.transform = 'translateX(0)';
                }, 300 + (index * 100));
            });

            // Auto-hide alerts
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.animation = 'cyber-slide 0.5s ease-out reverse';
                    setTimeout(() => alert.remove(), 500);
                }, 4000);
            });

            // Efecto typewriter para el título
            const title = document.querySelector('.form-title');
            const text = title.textContent;
            title.textContent = '';

            let i = 0;
            const typeWriter = () => {
                if (i < text.length) {
                    title.textContent += text.charAt(i);
                    i++;
                    setTimeout(typeWriter, 150);
                }
            };

            setTimeout(typeWriter, 500);

        });
    </script>
</body>
</html>