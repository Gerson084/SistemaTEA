@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Sistema TEA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&display=swap');

        :root {
            --primary-dark: #0a0a0a;
            --secondary-dark: #1a1a1a;
            --accent-dark: #2a2a2a;
            --neon-purple: #8b5cf6;
            --neon-violet: #a855f7;
            --neon-pink: #d946ef;
            --deep-purple: #6b46c1;
            --light-purple: #c084fc;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --glass-border: rgba(255, 255, 255, 0.1);
            --shadow-neon: 0 0 20px rgba(139, 92, 246, 0.3);
            --shadow-heavy: 0 20px 40px rgba(0, 0, 0, 0.4);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(45deg, var(--primary-dark) 0%, var(--secondary-dark) 50%, var(--accent-dark) 100%);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            position: relative;
            overflow: hidden;
        }
 
            body::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-image: radial-gradient(circle at 25% 25%, var(--neon-purple) 0%, transparent 50%), radial-gradient(circle at 75% 75%, var(--neon-pink) 0%, transparent 50%);
                opacity: 0.1;
                z-index: 1;
            }


        .login-container {
            background: rgba(26, 26, 26, 0.8);
            backdrop-filter: blur(20px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 0;
            width: 90%;
            max-width: 900px;
            height: 600px;
            display: flex;
            position: relative;
            z-index: 10;
            box-shadow: var(--shadow-heavy);
            overflow: hidden;
        }

 
        .left-side {
            flex: 1;
            background: linear-gradient(135deg, var(--deep-purple) 0%, var(--neon-purple) 50%, var(--neon-pink) 100%);
            position: relative;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 3rem 2rem;
        }

            .left-side::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.1) 50%, transparent 70%), repeating-linear-gradient( 90deg, transparent, transparent 2px, rgba(255, 255, 255, 0.05) 2px, rgba(255, 255, 255, 0.05) 4px );
                animation: slide-pattern 8s linear infinite;
            }

        @@keyframes slide-pattern {
            0%

        {
            transform: translateX(-100px);
        }

        100% {
            transform: translateX(100px);
        }

        }

        .brand-logo {
            width: 100px;
            height: 100px;
            background: rgba(255, 255, 255, 0.2);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 2rem;
            font-size: 2.5rem;
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            animation: glow-pulse 2s ease-in-out infinite alternate;
        }

        @@keyframes glow-pulse {
            from

        {
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.3);
        }

        to {
            box-shadow: 0 0 40px rgba(255, 255, 255, 0.6);
        }

        }

        .brand-title {
            font-size: 3rem;
            font-weight: 800;
            color: white;
            margin-bottom: 1rem;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
            letter-spacing: -1px;
        }

        .brand-subtitle {
            font-size: 1.1rem;
            color: rgba(255, 255, 255, 0.9);
            font-weight: 300;
            line-height: 1.6;
            max-width: 300px;
        }

       
        .right-side {
            flex: 1;
            padding: 3rem 2.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            background: var(--secondary-dark);
            position: relative;
        }

        .form-header {
            margin-bottom: 2.5rem;
        }

        .form-title {
            font-size: 2.2rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .form-subtitle {
            color: var(--text-muted);
            font-size: 1rem;
            font-weight: 400;
        }

       
        .form-field {
            margin-bottom: 2rem;
            position: relative;
        }

        .field-label {
            display: block;
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 0.8rem;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .field-wrapper {
            position: relative;
        }

        .field-input {
            width: 100%;
            padding: 1.2rem 1rem 1.2rem 3.5rem;
            background: var(--accent-dark);
            border: 2px solid transparent;
            border-radius: 12px;
            color: var(--text-light);
            font-size: 1rem;
            font-weight: 400;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            outline: none;
        }

            .field-input::placeholder {
                color: var(--text-muted);
                font-weight: 300;
            }

            .field-input:focus {
                border-color: var(--neon-purple);
                background: rgba(42, 42, 42, 0.8);
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.1);
                transform: translateY(-2px);
            }

        .field-icon {
            position: absolute;
            left: 1.2rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.1rem;
            transition: color 0.3s ease;
        }

        .field-wrapper:focus-within .field-icon {
            color: var(--neon-purple);
        }

      
        .neon-button {
            width: 100%;
            padding: 1.2rem;
            background: transparent;
            border: 2px solid var(--neon-purple);
            border-radius: 12px;
            color: var(--neon-purple);
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-top: 1rem;
        }

            .neon-button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, var(--neon-purple), var(--neon-pink));
                transition: left 0.3s ease;
                z-index: -1;
            }

            .neon-button:hover {
                color: white;
                box-shadow: 0 0 20px rgba(139, 92, 246, 0.5), inset 0 0 20px rgba(139, 92, 246, 0.1);
                transform: translateY(-2px);
            }

                .neon-button:hover::before {
                    left: 0;
                }

            .neon-button:active {
                transform: translateY(0);
            }

   
        .register-section {
            text-align: center;
            margin-top: 2rem;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .register-text {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 0.5rem;
        }

        .register-link {
            color: var(--neon-violet);
            text-decoration: none;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
        }

            .register-link::after {
                content: '';
                position: absolute;
                bottom: -2px;
                left: 0;
                width: 0;
                height: 2px;
                background: var(--neon-violet);
                transition: width 0.3s ease;
            }

            .register-link:hover {
                color: var(--neon-pink);
                text-shadow: 0 0 10px rgba(217, 70, 239, 0.5);
            }

                .register-link:hover::after {
                    width: 100%;
                    background: var(--neon-pink);
                }

      
        .alert {
            position: fixed;
            top: 2rem;
            right: 2rem;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            font-weight: 500;
            z-index: 1000;
            backdrop-filter: blur(20px);
            animation: cyber-slide 0.5s ease-out;
            box-shadow: var(--shadow-heavy);
            max-width: 400px;
            border-left: 4px solid;
        }

        @@keyframes cyber-slide {
            from

        {
            opacity: 0;
            transform: translateX(100px) rotateY(90deg);
        }

        to {
            opacity: 1;
            transform: translateX(0) rotateY(0deg);
        }

        }

        .alert-success {
            background: rgba(139, 92, 246, 0.1);
            color: var(--neon-purple);
            border-color: var(--neon-purple);
            border-left-color: var(--neon-purple);
        }

        .alert-danger {
            background: rgba(217, 70, 239, 0.1);
            color: var(--neon-pink);
            border-color: var(--neon-pink);
            border-left-color: var(--neon-pink);
        }

        /* Loading state */
        .neon-button.loading {
            pointer-events: none;
            animation: cyber-loading 1.5s ease-in-out infinite;
        }

            .neon-button.loading::after {
                content: '';
                position: absolute;
                top: 50%;
                right: 1rem;
                width: 20px;
                height: 20px;
                border: 2px solid transparent;
                border-top: 2px solid currentColor;
                border-radius: 50%;
                transform: translateY(-50%);
                animation: spin 1s linear infinite;
            }

        @@keyframes cyber-loading {
            0%, 100%

        {
            border-color: var(--neon-purple);
        }

        50% {
            border-color: var(--neon-pink);
        }

        }

        @@keyframes spin {
            from

        {
            transform: translateY(-50%) rotate(0deg);
        }

        to {
            transform: translateY(-50%) rotate(360deg);
        }

        }

  
        @@media (max-width: 768px) {
            .login-container

        {
            flex-direction: column;
            height: auto;
            max-width: 400px;
        }

        .left-side {
            padding: 2rem 1.5rem 1rem;
            min-height: 200px;
        }

        .brand-title {
            font-size: 2rem;
        }

        .brand-logo {
            width: 70px;
            height: 70px;
            font-size: 2rem;
        }

        .right-side {
            padding: 2rem 1.5rem;
        }

        .form-title {
            font-size: 1.8rem;
        }

        .alert {
            top: 1rem;
            right: 1rem;
            left: 1rem;
        }

        }

        @@media (max-width: 480px) {
            .login-container

        {
            width: 95%;
            margin: 1rem;
        }

        .left-side,
        .right-side {
            padding: 1.5rem 1rem;
        }

        }
    </style>
</head>
<body>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-triangle"></i> @ViewBag.Error
        </div>
    }

    <div class="login-container">

        <div class="left-side">
            <div class="brand-logo">
                <img src="/img/psicologo.png"/>
            </div>
            <h1 class="brand-title">TEA</h1>
            <p class="brand-subtitle">
                Sistema de Diagnostico TEA.
            </p>
        </div>

        <div class="right-side">
            <div class="form-header">
                <h2 class="form-title">Acceso</h2>
                <p class="form-subtitle">Ingresa al sistema con tus credenciales</p>
            </div>

            <form asp-action="Login" method="post" id="loginForm">
                <div class="form-field">
                    <label for="correo" class="field-label">Email</label>
                    <div class="field-wrapper">
                        <i class="fas fa-at field-icon"></i>
                        <input id="correo"
                               name="correo"
                               type="email"
                               class="field-input"
                               placeholder="usuario@sistema.com"
                               required
                               autocomplete="email" />
                    </div>
                </div>

                <div class="form-field">
                    <label for="clave" class="field-label">Contraseña</label>
                    <div class="field-wrapper">
                        <i class="fas fa-key field-icon"></i>
                        <input id="clave"
                               name="clave"
                               type="password"
                               class="field-input"
                               placeholder="••••••••••"
                               required
                               autocomplete="current-password" />
                    </div>
                </div>

                <button type="submit" class="neon-button" id="loginBtn">
                    <i class="fas fa-rocket"></i> Iniciar Sesión
                </button>

                <div class="register-section">
                    <p class="register-text">¿Primera vez aquí?</p>
                    <a asp-action="Registro" class="register-link">
                        Crear cuenta nueva
                    </a>
                </div>
            </form>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {

        @if (TempData["RegistroExitoso"] != null)
        {
            <text>
                        Swal.fire({
                            icon: 'success',
                            title: 'Acceso Autorizado',
                                    text: '@System.Text.Encodings.Web.JavaScriptEncoder.Default.Encode(TempData["RegistroExitoso"]?.ToString())',
                            background: '#1a1a1a',
                            color: '#ffffff',
                            confirmButtonColor: '#8b5cf6',
                            iconColor: '#8b5cf6',
                            showClass: {
                                popup: 'animate__animated animate__zoomIn'
                            }
                        });
            </text>
        }


            const loginForm = document.getElementById('loginForm');
            const loginBtn = document.getElementById('loginBtn');

            loginForm.addEventListener('submit', function(e) {
                loginBtn.classList.add('loading');
                loginBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Conectando...';
            });

            
            const formFields = document.querySelectorAll('.form-field');
            formFields.forEach((field, index) => {
                field.style.opacity = '0';
                field.style.transform = 'translateX(30px)';

                setTimeout(() => {
                    field.style.transition = 'all 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94)';
                    field.style.opacity = '1';
                    field.style.transform = 'translateX(0)';
                }, 300 + (index * 150));
            });

       
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    alert.style.animation = 'cyber-slide 0.5s ease-out reverse';
                    setTimeout(() => alert.remove(), 500);
                }, 4000);
            });

            const inputs = document.querySelectorAll('.field-input');
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.style.transform = 'scale(1.02)';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.transform = 'scale(1)';

                    if (this.type === 'email' && this.value && !this.checkValidity()) {
                        this.style.borderColor = 'var(--neon-pink)';
                        this.style.boxShadow = '0 0 10px rgba(217, 70, 239, 0.3)';
                    } else if (this.value && this.checkValidity()) {
                        this.style.borderColor = 'var(--neon-purple)';
                        this.style.boxShadow = '0 0 10px rgba(139, 92, 246, 0.3)';
                    }
                });

                input.addEventListener('input', function() {
                    if (this.value === '') {
                        this.style.borderColor = 'transparent';
                        this.style.boxShadow = 'none';
                    }
                });
            });

            const title = document.querySelector('.form-title');
            const text = title.textContent;
            title.textContent = '';

            let i = 0;
            const typeWriter = () => {
                if (i < text.length) {
                    title.textContent += text.charAt(i);
                    i++;
                    setTimeout(typeWriter, 150);
                }
            };

            setTimeout(typeWriter, 500);
        });
    </script>
</body>
</html>