@{

    Layout = null;
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: linear-gradient(135deg, #f8f6ff 0%, #ede7f6 50%, #e1d5f7 100%);
        min-height: 100vh;
        margin: 0;
        padding: 20px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .container {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        box-shadow: 0 20px 40px rgba(126, 87, 194, 0.15);
        padding: 3rem;
        max-width: 600px;
        width: 100%;
        border: 1px solid rgba(186, 147, 238, 0.2);
        position: relative;
        overflow: hidden;
        text-align: center;
    }

        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #ba93ee, #9c7bd6, #7e57c2);
            border-radius: 20px 20px 0 0;
        }

    h2 {
        color: #6a4c93;
        font-size: 2.5rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 2.5rem;
        position: relative;
    }

        h2::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #ba93ee, #9c7bd6);
            border-radius: 2px;
        }

    .resultado-card {
        background: linear-gradient(135deg, #f3f0ff 0%, #ede7f6 100%);
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        border: 1px solid rgba(186, 147, 238, 0.3);
        box-shadow: 0 8px 25px rgba(126, 87, 194, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .resultado-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 35px rgba(126, 87, 194, 0.15);
        }

    .resultado-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        padding: 1rem;
        background: rgba(255, 255, 255, 0.6);
        border-radius: 10px;
        border-left: 4px solid #ba93ee;
        transition: all 0.3s ease;
    }

        .resultado-item:hover {
            background: rgba(255, 255, 255, 0.8);
            transform: translateX(5px);
        }

        .resultado-item:last-child {
            margin-bottom: 0;
        }

    .label {
        font-weight: 600;
        color: #5a4570;
        font-size: 1.1rem;
        display: flex;
        align-items: center;
    }

        .label::before {
            content: '●';
            color: #ba93ee;
            font-size: 1.5rem;
            margin-right: 0.8rem;
        }

    .value {
        font-weight: 700;
        color: #6a4c93;
        font-size: 1.2rem;
        background: linear-gradient(135deg, #ba93ee, #9c7bd6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .estado-completado {
        background: linear-gradient(135deg, #4caf50, #66bb6a) !important;
        color: white !important;
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: 600;
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
        animation: pulse 2s infinite;
        -webkit-background-clip: unset !important;
        -webkit-text-fill-color: white !important;
    }

    @@keyframes pulse {
        0%

    {
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

    50% {
        box-shadow: 0 6px 20px rgba(76, 175, 80, 0.5);
    }

    100% {
        box-shadow: 0 4px 15px rgba(76, 175, 80, 0.3);
    }

    }

    .disclaimer {
        background: linear-gradient(135deg, #fff3e0 0%, #ffe0b2 100%);
        border: 2px solid #ffb74d;
        border-radius: 15px;
        padding: 1.5rem;
        margin-top: 2rem;
        position: relative;
        box-shadow: 0 8px 25px rgba(255, 183, 77, 0.15);
    }

        .disclaimer::before {
            content: '⚠️';
            position: absolute;
            top: -12px;
            left: 20px;
            background: #fff3e0;
            padding: 0 10px;
            font-size: 1.2rem;
        }

        .disclaimer p {
            color: #ef6c00;
            font-weight: 600;
            font-size: 0.95rem;
            line-height: 1.6;
            margin: 0;
            text-align: center;
            font-style: italic;
        }

    .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
        overflow: hidden;
        pointer-events: none;
        z-index: -1;
    }

    .shape {
        position: absolute;
        background: rgba(186, 147, 238, 0.1);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

        .shape:nth-child(1) {
            width: 80px;
            height: 80px;
            top: 20%;
            left: 10%;
            animation-delay: 0s;
        }

        .shape:nth-child(2) {
            width: 60px;
            height: 60px;
            top: 60%;
            right: 15%;
            animation-delay: 2s;
        }

        .shape:nth-child(3) {
            width: 40px;
            height: 40px;
            bottom: 20%;
            left: 20%;
            animation-delay: 4s;
        }

    @@keyframes float {
        0%, 100%

    {
        transform: translateY(0px) rotate(0deg);
    }

    50% {
        transform: translateY(-20px) rotate(180deg);
    }

    }

    @@media (max-width: 768px) {
        .container

    {
        margin: 1rem;
        padding: 2rem;
    }

    h2 {
        font-size: 2rem;
    }

    .resultado-item {
        flex-direction: column;
        text-align: center;
        gap: 0.5rem;
    }

    }</style>

<div class="container">
    <div class="floating-shapes">
        <div class="shape"></div>
        <div class="shape"></div>
        <div class="shape"></div>
    </div>

    <h2>Resultado Final</h2>

    <div class="resultado-card">
        <div class="resultado-item">
            <span class="label">Evaluación ID:</span>
            <span class="value">@ViewBag.EvaluacionID</span>
        </div>

        <div class="resultado-item">
            <span class="label">Puntaje Total:</span>
            <span class="value">@ViewBag.NotaTotal</span>
        </div>

        <div class="resultado-item">
            <span class="label">Estado:</span>
            <span class="value estado-completado">Completado</span>
        </div>
    </div>

    <div class="disclaimer">
        <p>*La interpretación clínica debe ser realizada por un profesional capacitado utilizando las tablas normativas del ADOS-2.*</p>
    </div>

    <a asp-action="InicioPSICOLOGO" asp-controller="Login" class="btn btn-danger">Volver a Inicio</a>

</div>