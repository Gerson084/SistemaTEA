@model List<SistemaTEA.Models.Usuario>

@{
    ViewData["Title"] = "Gestión de Padres Pendientes";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Padres Pendientes - Sistema TEA</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.24/css/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            color: #333;
        }

        .header {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(15px);
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

            .header h1 {
                color: white;
                font-size: 1.6rem;
                font-weight: 300;
                display: flex;
                align-items: center;
                gap: 0.5rem;
            }

                .header h1 i {
                    color: #ffd700;
                }

        .header-right {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .btn-back {
            padding: 0.6rem 1.2rem;
            background: rgba(108, 117, 125, 0.9);
            color: white;
            border: none;
            border-radius: 20px;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 0.9rem;
        }

            .btn-back:hover {
                background: rgba(108, 117, 125, 1);
                transform: translateY(-2px);
            }

        .main-container {
            padding: 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .page-header {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            text-align: center;
            backdrop-filter: blur(10px);
        }

            .page-header h2 {
                color: #2d3748;
                margin-bottom: 1rem;
                font-size: 2.5rem;
                font-weight: 300;
            }

            .page-header p {
                color: #718096;
                font-size: 1.2rem;
            }

        .stats-card {
            background: linear-gradient(135deg, #ff6b6b 0%, #ee5a52 100%);
            border-radius: 20px;
            padding: 2.5rem;
            margin-bottom: 2rem;
            box-shadow: 0 15px 35px rgba(238, 90, 82, 0.3);
            text-align: center;
            color: white;
            position: relative;
            overflow: hidden;
        }

            .stats-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                background: rgba(255, 255, 255, 0.1);
                backdrop-filter: blur(10px);
            }

            .stats-card .content {
                position: relative;
                z-index: 1;
            }

        .stat-number {
            font-size: 4rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .stat-label {
            font-size: 1.3rem;
            font-weight: 500;
            opacity: 0.9;
        }

        .table-container {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            padding: 2.5rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

        .table-title {
            color: #2d3748;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .table {
            margin-bottom: 0;
            border-radius: 10px;
            overflow: hidden;
        }

            .table th {
                background: linear-gradient(135deg, #4a5568 0%, #2d3748 100%);
                color: white;
                border: none;
                padding: 1.25rem 1rem;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.85rem;
                letter-spacing: 0.5px;
            }

            .table td {
                padding: 1.25rem 1rem;
                border-top: 1px solid #e2e8f0;
                vertical-align: middle;
                background: white;
            }

            .table tbody tr {
                transition: all 0.3s ease;
            }

                .table tbody tr:hover {
                    background-color: #f8fafc;
                    transform: translateY(-1px);
                    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
                }

        .user-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .user-details h6 {
            margin: 0;
            color: #2d3748;
            font-weight: 600;
        }

        .user-details small {
            color: #718096;
        }

        .badge {
            padding: 0.5rem 1rem;
            border-radius: 25px;
            font-size: 0.8rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .badge-pending {
            background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);
            color: white;
            animation: pulse 2s infinite;
        }

        @@keyframes pulse {
            0%

        {
            box-shadow: 0 0 0 0 rgba(237, 137, 54, 0.4);
        }

        70% {
            box-shadow: 0 0 0 10px rgba(237, 137, 54, 0);
        }

        100% {
            box-shadow: 0 0 0 0 rgba(237, 137, 54, 0);
        }

        }

        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 12px;
            font-size: 0.9rem;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            justify-content: center;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-activate {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            color: white;
            position: relative;
            overflow: hidden;
        }

            .btn-activate::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: left 0.5s;
            }

            .btn-activate:hover::before {
                left: 100%;
            }

            .btn-activate:hover {
                transform: translateY(-3px);
                box-shadow: 0 8px 25px rgba(72, 187, 120, 0.4);
                color: white;
            }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
            transform: none !important;
        }

        .empty-state {
            text-align: center;
            padding: 4rem;
            color: #718096;
        }

            .empty-state i {
                font-size: 5rem;
                margin-bottom: 1.5rem;
                color: #48bb78;
                animation: bounce 2s infinite;
            }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100%

        {
            transform: translateY(0);
        }

        40% {
            transform: translateY(-10px);
        }

        60% {
            transform: translateY(-5px);
        }

        }

        .empty-state h4 {
            color: #2d3748;
            margin-bottom: 1rem;
            font-size: 1.8rem;
        }

        .empty-state p {
            font-size: 1.1rem;
            margin-bottom: 0.5rem;
        }

        /* Modal Styles - MEJORADO */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(5px);
            z-index: 1050;
            display: none;
            opacity: 0;
            transition: opacity 0.3s ease;
        }

            .modal-overlay.show {
                display: flex;
                align-items: center;
                justify-content: center;
                opacity: 1;
            }

        .modal-container {
            background: white;
            border-radius: 20px;
            box-shadow: 0 25px 60px rgba(0, 0, 0, 0.25);
            overflow: hidden;
            max-width: 500px;
            width: 90%;
            transform: scale(0.8);
            transition: transform 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        }

        .modal-overlay.show .modal-container {
            transform: scale(1);
        }

        .modal-header-custom {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            position: relative;
        }

        .modal-close {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
            width: 36px;
            height: 36px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 18px;
        }

            .modal-close:hover {
                background: rgba(255, 255, 255, 0.3);
                transform: rotate(90deg);
            }

        .modal-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
            font-size: 2.2rem;
            animation: modalIconPulse 2s ease-in-out infinite;
        }

        @@keyframes modalIconPulse {
            0%, 100%

        {
            transform: scale(1);
        }

        50% {
            transform: scale(1.05);
        }

        }

        .modal-title-custom {
            font-size: 1.4rem;
            font-weight: 600;
            margin: 0;
        }

        .modal-body-custom {
            padding: 2.5rem;
            text-align: center;
        }

        .user-preview {
            background: #f8fafc;
            border-radius: 15px;
            padding: 2rem;
            margin-bottom: 2rem;
            border-left: 4px solid #667eea;
        }

        .user-name {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2d3748;
            margin-bottom: 0.5rem;
        }

        .user-role {
            color: #718096;
            font-size: 0.95rem;
            margin-bottom: 1rem;
        }

        .confirmation-message {
            color: #4a5568;
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 0.5rem;
        }

        .confirmation-note {
            color: #718096;
            font-size: 0.9rem;
            font-style: italic;
        }

        .modal-actions {
            padding: 1.5rem 2.5rem 2.5rem;
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

        .btn-modal {
            padding: 1rem 2rem;
            border: none;
            border-radius: 12px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            min-width: 140px;
            justify-content: center;
        }

        .btn-confirm-modal {
            background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
            color: white;
        }

            .btn-confirm-modal:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(72, 187, 120, 0.3);
            }

        .btn-cancel-modal {
            background: linear-gradient(135deg, #e2e8f0 0%, #cbd5e0 100%);
            color: #4a5568;
        }

            .btn-cancel-modal:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
            }

        @@media (max-width: 768px) {
            .main-container

        {
            padding: 1rem;
        }

        .header {
            padding: 1rem;
            flex-direction: column;
            gap: 1rem;
        }

        .table-container {
            padding: 1.5rem;
            overflow-x: auto;
        }

        .user-info {
            flex-direction: column;
            text-align: center;
        }

        .modal-container {
            width: 95%;
        }

        .modal-actions {
            flex-direction: column;
        }

        .btn-modal {
            width: 100%;
        }

        }

        /* DataTables customization */
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            padding: 0.75rem 1rem;
            margin: 0.25rem;
            border-radius: 8px;
            border: 2px solid #e2e8f0;
            transition: all 0.3s ease;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button.current {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white !important;
                border-color: #667eea;
            }

        .dataTables_wrapper .dataTables_length select,
        .dataTables_wrapper .dataTables_filter input {
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.75rem;
            transition: border-color 0.3s ease;
        }

            .dataTables_wrapper .dataTables_filter input:focus,
            .dataTables_wrapper .dataTables_length select:focus {
                border-color: #667eea;
                outline: none;
            }

        .fade-out {
            animation: fadeOut 0.5s ease-out forwards;
        }

        @@keyframes fadeOut {
            from

        {
            opacity: 1;
            transform: translateX(0);
        }

        to {
            opacity: 0;
            transform: translateX(-20px);
        }

        }
    </style>
</head>
<body>
    <div class="header">
        <h1><i class="fas fa-brain"></i> Gestión de Padres Pendientes</h1>
        <div class="header-right">
            <a href="@Url.Action("InicioADMIN", "Login")" class="btn-back">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>
    </div>
    <div class="main-container">
        <div class="page-header">
            <h2><i class="fas fa-users-cog"></i> Activación de Cuentas</h2>
            <p>Gestiona las solicitudes de registro de padres pendientes de activación</p>
        </div>

        <!-- Estadística rápida -->
        <div class="stats-card">
            <div class="content">
                <div class="stat-number" id="pendingCount">@Model.Count()</div>
                <div class="stat-label">Padres Pendientes de Activación</div>
            </div>
        </div>

        <!-- Tabla de usuarios -->
        <div class="table-container">
            <h3 class="table-title">
                <i class="fas fa-list"></i> Lista de Padres Pendientes
            </h3>

            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table" id="tablaPadres">
                        <thead>
                            <tr>
                                <th><i class="fas fa-hashtag"></i> ID</th>
                                <th><i class="fas fa-user"></i> Usuario</th>
                                <th><i class="fas fa-envelope"></i> Email</th>
                                <th><i class="fas fa-phone"></i> Teléfono</th>
                                <th><i class="fas fa-calendar"></i> Fecha Registro</th>
                                <th><i class="fas fa-info-circle"></i> Estado</th>
                                <th><i class="fas fa-cogs"></i> Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var usuario in Model)
                            {
                                <tr id="fila-@usuario.UsuarioID">
                                    <td><strong>#@usuario.UsuarioID</strong></td>
                                    <td>
                                        <div class="user-info">
                                            <div class="user-avatar">
                                                @(usuario.Nombre?.Substring(0, 1).ToUpper())@(usuario.Apellido?.Substring(0, 1).ToUpper())
                                            </div>
                                            <div class="user-details">
                                                <h6>@usuario.Nombre @usuario.Apellido</h6>
                                                <small>Cuenta de Padre</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <i class="fas fa-envelope text-muted"></i>
                                        @usuario.Email
                                    </td>
                                    <td>
                                        <i class="fas fa-phone text-muted"></i>
                                        @(usuario.Telefono ?? "N/A")
                                    </td>
                                    <td>
                                        <i class="fas fa-clock text-muted"></i>
                                        @usuario.FechaRegistro.ToString("dd/MM/yyyy")
                                        <br><small class="text-muted">@usuario.FechaRegistro.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <span class="badge badge-pending">
                                            <i class="fas fa-hourglass-half"></i> Pendiente
                                        </span>
                                    </td>
                                    <td>
                                        <button class="btn btn-activate"
                                                onclick="mostrarConfirmacion(@usuario.UsuarioID, '@usuario.Nombre @usuario.Apellido')"
                                                title="Activar cuenta">
                                            <i class="fas fa-check-circle"></i> Activar
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="fas fa-check-circle"></i>
                    <h4>¡Excelente trabajo!</h4>
                    <p>No hay padres pendientes de activación en este momento.</p>
                    <p class="text-muted">Todas las cuentas de padres han sido procesadas correctamente.</p>
                </div>
            }
        </div>
    </div>

    <!-- Modal de Confirmación Mejorado -->
    <div class="modal-overlay" id="modalConfirmacion">
        <div class="modal-container">
            <div class="modal-header-custom">
                <button class="modal-close" onclick="cerrarModal()">
                    <i class="fas fa-times"></i>
                </button>
                <div class="modal-icon">
                    <i class="fas fa-user-check"></i>
                </div>
                <h3 class="modal-title-custom">Confirmar Activación de Cuenta</h3>
            </div>

            <div class="modal-body-custom">
                <div class="user-preview" id="userPreview">
                    <!-- Información del usuario se insertará aquí -->
                </div>

                <div class="confirmation-message">
                    ¿Está seguro que desea activar esta cuenta de padre?
                </div>

                <div class="confirmation-note">
                    Se enviará automáticamente un correo de confirmación al usuario.
                </div>
            </div>

            <div class="modal-actions">
                <button class="btn-modal btn-cancel-modal" onclick="cerrarModal()">
                    <i class="fas fa-times"></i> Cancelar
                </button>
                <button class="btn-modal btn-confirm-modal" id="btnConfirmarActivacion">
                    <i class="fas fa-check"></i> Activar Cuenta
                </button>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/4.6.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.24/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        let usuarioIdActual = 0;
        let nombreUsuarioActual = '';
        let tablaPadres;

        $(document).ready(function() {
            // Inicializar DataTable
            @if (Model.Any())
            {
                        <text>
                        tablaPadres = $('#tablaPadres').DataTable({
                            "language": {
                                "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
                            },
                            "responsive": true,
                            "order": [[ 4, "desc" ]], // Ordenar por fecha de registro
                            "pageLength": 10,
                            "columnDefs": [
                                { "orderable": false, "targets": 6 } // Desactivar ordenamiento en columna de acciones
                            ]
                        });
                        </text>
            }

            // Configurar toastr
            toastr.options = {
                "closeButton": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "timeOut": "5000",
                "extendedTimeOut": "2000"
            };

            // Animación de entrada
            $('.stats-card, .table-container').each(function(index) {
                $(this).css({
                    'opacity': '0',
                    'transform': 'translateY(30px)'
                });

                setTimeout(() => {
                    $(this).css({
                        'transition': 'all 0.8s cubic-bezier(0.25, 0.46, 0.45, 0.94)',
                        'opacity': '1',
                        'transform': 'translateY(0)'
                    });
                }, index * 300);
            });

            // Cerrar modal con ESC
            $(document).keydown(function(e) {
                if (e.key === 'Escape') {
                    cerrarModal();
                }
            });

            // Cerrar modal al hacer clic fuera
            $('#modalConfirmacion').click(function(e) {
                if (e.target === this) {
                    cerrarModal();
                }
            });
        });

        function mostrarConfirmacion(usuarioId, nombreCompleto) {
            usuarioIdActual = usuarioId;
            nombreUsuarioActual = nombreCompleto;

            // Crear el preview del usuario
            const userPreview = `
                <div class="user-name">${nombreCompleto}</div>
                <div class="user-role">
                    <i class="fas fa-user-friends"></i> Cuenta de Padre - ID #${usuarioId}
                </div>
            `;

            $('#userPreview').html(userPreview);
            $('#modalConfirmacion').addClass('show');
        }

        function cerrarModal() {
            $('#modalConfirmacion').removeClass('show');

            // Limpiar variables después de la animación
            setTimeout(() => {
                usuarioIdActual = 0;
                nombreUsuarioActual = '';
            }, 300);
        }

        $('#btnConfirmarActivacion').click(function() {
            if (usuarioIdActual === 0) return;

            const btn = $(this);
            const textoOriginal = btn.html();

            // Deshabilitar botón y mostrar loading
            btn.prop('disabled', true);
            btn.html('<i class="fas fa-spinner fa-spin"></i> Activando...');

            $.ajax({
                url: '@Url.Action("ActivarCuenta", "Usuarios")',
                type: 'POST',
                data: { usuarioId: usuarioIdActual },
                success: function(response) {
                    if (response.success) {
                        // Cerrar modal
                        cerrarModal();

                        // Mostrar mensaje de éxito
                        toastr.success('¡Cuenta activada exitosamente! Se ha enviado un correo de confirmación.', 'Activación Completada', {
                            iconClass: 'toast-success-custom'
                        });

                        // Animar y remover fila de la tabla
                        const fila = $('#fila-' + usuarioIdActual);
                        fila.addClass('fade-out');

                        setTimeout(() => {
                            if (tablaPadres) {
                                tablaPadres.row(fila).remove().draw();
                            } else {
                                fila.remove();
                            }

                            // Actualizar contador
                            const nuevoConteo = parseInt($('#pendingCount').text()) - 1;
                            $('#pendingCount').text(nuevoConteo);

                            // Si no quedan más padres pendientes, mostrar mensaje
                            if (nuevoConteo === 0) {
                                setTimeout(function() {
                                    $('.table-container').html(`
                                        <h3 class="table-title">
                                            <i class="fas fa-list"></i> Lista de Padres Pendientes
                                        </h3>
                                        <div class="empty-state">
                                            <i class="fas fa-check-circle"></i>
                                            <h4>¡Excelente trabajo!</h4>
                                            <p>No hay padres pendientes de activación en este momento.</p>
                                            <p class="text-muted">Todas las cuentas de padres han sido procesadas correctamente.</p>
                                        </div>
                                    `);
                                }, 500);
                            }
                        }, 500);

                    } else {
                        toastr.error(response.message || 'Error desconocido al activar la cuenta', 'Error en Activación');
                    }
                },
                error: function(xhr, status, error) {
                    let errorMessage = 'Error de conexión. Por favor, intente nuevamente.';
                    if (xhr.responseJSON && xhr.responseJSON.message) {
                        errorMessage = xhr.responseJSON.message;
                    }
                    toastr.error(errorMessage, 'Error de Conexión');
                },
                complete: function() {
                    // Restaurar botón
                    btn.prop('disabled', false);
                    btn.html(textoOriginal);
                }
            });
        });
    </script>
</body>
